<div class="students-index">

  <%= render 'shared/sidebar' %>

  <div class="students-grid">
    <h1> List of Our Students </h1>

    <div class="students-list">
      <% @students.each do |student| %>
        <div class="students-info">
          <h3> <%= link_to student.full_name, student_path(student.slug)  %> </h3>
          <p> Course id#: <%= student.course_id %> </p>
          <p> Cohort id#: <%= student.cohort_id %> </p>
          <section class="students-links">
            <%= link_to 'Edit Details', edit_student_path(student.slug) %>
            <span class="terminate">
              <%= link_to 'Expel Student', course_cohort_student_path(student.course_id, student.cohort_id, student.slug), method: :delete, data: { confirm: 'Are you sure?', remote: true }, class: 'denied' %>
            </span>
          </section>
        </div>
      <% end %>
    </div>
  </div>
</div>

